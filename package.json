{
  "name": "zerva",
  "version": "0.5.3",
  "description": "🌱 Simple event driven server",
  "bin": {
    "zerva": "bin.cjs"
  },
  "funding": {
    "type": "GitHub Sponsors ❤",
    "url": "https://github.com/sponsors/holtwick"
  },
  "keywords": [
    "server",
    "typescript",
    "event"
  ],
  "author": {
    "name": "Dirk Holtwick",
    "url": "https://holtwick.de"
  },
  "license": "MIT",
  "type": "module",
  "typings": "dist/index.d.ts",
  "exports": {
    ".": {
      "browser": "./dist/index.js",
      "require": "./dist/index.cjs",
      "node": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "module": "dist/index.js",
  "main": "dist/index.cjs",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14.13.1"
  },
  "scripts": {
    "start": "npm run watch",
    "build": "npm run clean && npm run build:tsup && chmod +x ./bin.cjs",
    "build:esm": "tsc -p tsconfig.json",
    "build:tsup": "tsup src/index.ts --dts --sourcemap --format esm,cjs",
    "clean": "rm -rf dist",
    "watch": "npm run build:tsup -- --watch",
    "prepublishOnly": "npm test && npm run build",
    "test": "ZEED=* jest src",
    "global": "pnpm -g ln"
  },
  "dependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.8",
    "cors": "^2.8.5",
    "esbuild": "^0.14.10",
    "express": "^4.17.2",
    "helmet": "^5.0.1",
    "node-notifier": "^10.0.0",
    "qrcode-terminal": "^0.12.0",
    "zeed": "^0.7.106"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/qrcode-terminal": "^0.12.0",
    "cross-fetch": "^3.1.4",
    "jest": "^27.4.7",
    "ts-jest": "^27.1.2",
    "tsup": "^5.11.11",
    "typescript": "^4.5.4"
  }
}
