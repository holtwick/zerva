{
  "name": "zerva",
  "version": "0.2.4",
  "description": "🌱 Simple event driven server",
  "main": "index.js",
  "bin": {
    "zerva": "bin.cjs"
  },
  "funding": {
    "type": "GitHub Sponsors ❤",
    "url": "https://github.com/sponsors/holtwick"
  },
  "keywords": [
    "server",
    "typescript",
    "event"
  ],
  "author": {
    "name": "Dirk Holtwick",
    "url": "https://holtwick.de"
  },
  "license": "MIT",
  "type": "module",
  "typings": "dist/esm/index.all.d.ts",
  "exports": {
    "./ts": "./src/index.ts",
    "./dist/": "./dist/",
    ".": {
      "node": "./dist/esm/index.js",
      "default": "./dist/esm/index.js"
    }
  },
  "module": "dist/esm/index.js",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=14.13.1"
  },
  "scripts": {
    "start": "npm run watch",
    "build": "npm run clean && npm run build:esm && chmod +x ./bin.cjs",
    "build:esm": "tsc -p tsconfig.json",
    "clean": "rm -rf dist",
    "watch": "tsc -w -p tsconfig.json",
    "prepublishOnly": "npm run build",
    "test": "jest src",
    "global": "pnpm -g ln"
  },
  "dependencies": {
    "chokidar": "^3.5.2",
    "cors": "^2.8.5",
    "esbuild": "^0.12.15",
    "estrella": "^1.4.1",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "node-notifier": "^10.0.0",
    "zeed": "^0.3.10"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.3.1",
    "jest": "^27.0.6",
    "jest-ts-webcompat-resolver": "^1.0.0",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5"
  }
}