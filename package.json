{
  "name": "@zerva/monorepo",
  "private": true,
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "update": "pnpm update -i -r --latest",
    "build": "pnpm build -r --filter=@zerva/*",
    "test": "pnpm test -r --filter=@zerva/*",
    "release": "pnpm run bump && pnpm run build && pnpm run publish && ./release.sh",
    "bump": "bumpp package.json zerva-*/package.json --commit",
    "publish": "pnpm -r --filter=@zerva/* publish --access public",
    "preinstall": "npx only-allow pnpm",
    "prepublish": "npx only-allow pnpm",
    "format": "prettier --write ."
  },
  "_gitHooks": {
    "pre-commit": "lint-staged --concurrent false",
    "commit-msg": "node scripts/verifyCommit.cjs"
  },
  "packageManager": "pnpm@6.23.0",
  "pnpm": {
    "overrides": {}
  },
  "devDependencies": {
    "bumpp": "^7.1.1",
    "only-allow": "^1.1.0",
    "prettier": "^2.6.0"
  },
  "version": "0.7.21"
}
