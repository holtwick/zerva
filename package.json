{
  "name": "zerva",
  "version": "0.4.51",
  "description": "🌱 Simple event driven server",
  "bin": {
    "zerva": "bin.cjs"
  },
  "funding": {
    "type": "GitHub Sponsors ❤",
    "url": "https://github.com/sponsors/holtwick"
  },
  "keywords": [
    "server",
    "typescript",
    "event"
  ],
  "author": {
    "name": "Dirk Holtwick",
    "url": "https://holtwick.de"
  },
  "license": "MIT",
  "type": "module",
  "typings": "dist/index.d.ts",
  "exports": {
    ".": {
      "browser": "./dist/index.js",
      "require": "./dist/index.cjs",
      "node": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "module": "dist/index.js",
  "main": "dist/index.cjs",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14.13.1"
  },
  "scripts": {
    "start": "npm run watch",
    "build": "npm run clean && npm run build:tsup && chmod +x ./bin.cjs",
    "build:esm": "tsc -p tsconfig.json",
    "build:tsup": "tsup src/index.ts --dts --sourcemap --format esm,cjs",
    "clean": "rm -rf dist",
    "watch": "npm run build:tsup -- --watch",
    "prepublishOnly": "npm test && npm run build",
    "test": "jest src",
    "global": "pnpm -g ln"
  },
  "dependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.6",
    "cors": "^2.8.5",
    "esbuild": "^0.13.12",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "node-notifier": "^10.0.0",
    "zeed": "^0.7.55"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "cross-fetch": "^3.1.4",
    "jest": "^27.3.1",
    "ts-jest": "^27.0.7",
    "tsup": "^5.5.0",
    "typescript": "^4.4.4"
  }
}
