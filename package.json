{
  "name": "@zerva/monorepo",
  "private": true,
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "wup": "pnpm up -i -r --latest",
    "release": "bumpp package.json zerva-*/package.json --commit --push --tag && pnpm -r publish --access public",
    "preinstall": "npx only-allow pnpm",
    "format": "prettier --write ."
  },
  "_gitHooks": {
    "pre-commit": "lint-staged --concurrent false",
    "commit-msg": "node scripts/verifyCommit.cjs"
  },
  "packageManager": "pnpm@6.23.0",
  "pnpm": {
    "overrides": {}
  },
  "devDependencies": {
    "bumpp": "^7.1.1",
    "only-allow": "^1.1.0",
    "prettier": "^2.6.0"
  },
  "version": "0.7.0"
}
