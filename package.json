{
  "name": "@zerva/monorepo",
  "private": true,
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "update": "pnpm -r update -i --latest",
    "build": "pnpm -r --filter=@zerva/* build",
    "test": "pnpm -r --filter=@zerva/* test",
    "release": "pnpm run bump && pnpm run build && pnpm run publish && ./release.sh",
    "bump": "bumpp package.json zerva-*/package.json --commit",
    "publish": "pnpm -r --filter=@zerva/* publish --access public",
    "preinstall": "npx only-allow pnpm",
    "prepublish": "npx only-allow pnpm",
    "format": "prettier --write ."
  },
  "packageManager": "pnpm@6.23.0",
  "pnpm": {
    "overrides": {}
  },
  "devDependencies": {
    "@types/node": "^17.0.35",
    "bumpp": "^7.1.1",
    "cross-fetch": "^3.1.5",
    "only-allow": "^1.1.0",
    "prettier": "^2.6.2",
    "tsup": "^5.12.8",
    "typescript": "^4.7.2",
    "vitest": "^0.12.9"
  },
  "version": "0.7.28"
}