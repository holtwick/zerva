{
  "name": "@zerva/http",
  "version": "0.38.0",
  "description": "🌱 Zerva Express HTTP",
  "keywords": [
    "server",
    "typescript",
    "event"
  ],
  "funding": {
    "type": "GitHub Sponsors ❤",
    "url": "https://github.com/sponsors/holtwick"
  },
  "license": "MIT",
  "author": {
    "name": "Dirk Holtwick",
    "email": "dirk.holtwick@gmail.com",
    "url": "https://holtwick.de"
  },
  "type": "module",
  "exports": {
    ".": {
      "browser": "./dist/index.js",
      "default": "./dist/index.js",
      "node": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run clean && pnpm run build:tsup",
    "build:tsup": "tsup src/index.ts",
    "check": "vue-tsc --noEmit -p ./tsconfig.json",
    "clean": "rm -rf dist www",
    "dbld": "zerva demo/zerva.ts --esm --build && ZEED=* ZEED_COLOR=1 node dist/main.mjs",
    "drun": "ZEED=* ZEED_COLOR=1 zerva --esm demo/zerva.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "pnpm test && pnpm run build",
    "release": "pnpm test && pnpm version patch && pnpm build && pnpm publish --no-git-checks",
    "reset": "rm -rf node_modules pnpm-lock.yaml dist dist_www www",
    "start": "pnpm run watch",
    "test": "ZEED=* vitest --globals --run -r src",
    "watch": "tsup src/index.ts --watch"
  },
  "dependencies": {
    "@zerva/core": "workspace:*",
    "zeed": "^0.15.4"
  },
  "devDependencies": {
    "@types/bytes": "^3.1.4",
    "@types/compressible": "^2.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-serve-static-core": "^4.17.41",
    "@types/mime": "^3.0.4",
    "@types/negotiator": "^0.6.3",
    "@types/on-headers": "^1.0.3",
    "@types/vary": "^1.1.3",
    "@zerva/bin": "workspace:*",
    "bytes": "3.1.2",
    "compressible": "^2.0.18",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "mime": "^4.0.0",
    "mime-types": "^2.1.35",
    "negotiator": "^0.6.3",
    "on-headers": "^1.0.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2",
    "vary": "^1.1.2",
    "vitest": "^0.34.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
