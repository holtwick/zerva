  "type": "module",
  "exports": {
    ".": {
      "browser": "./dist/index.js",
      "default": "./dist/index.js",
      "node": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
