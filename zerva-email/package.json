{
  "name": "@zerva/email",
  "version": "0.21.0",
  "description": "üå± Zerva send email service",
  "keywords": [
    "server",
    "typescript",
    "event"
  ],
  "funding": {
    "type": "GitHub Sponsors ‚ù§",
    "url": "https://github.com/sponsors/holtwick"
  },
  "license": "MIT",
  "author": {
    "name": "Dirk Holtwick",
    "email": "dirk.holtwick@gmail.com",
    "url": "https://holtwick.de"
  },
  "type": "module",
  "exports": {
    ".": {
      "browser": "./dist/index.js",
      "default": "./dist/index.js",
      "node": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run clean && pnpm run build:tsup",
    "build:tsup": "tsup src/index.ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run build",
    "release": "pnpm test && pnpm version patch && pnpm build && pnpm publish --no-git-checks",
    "reset": "rm -rf node_modules pnpm-lock.yaml dist dist_www www",
    "start": "pnpm run watch",
    "test": "echo 'NO TESTS AVAILABLE'",
    "watch": "tsup src/index.ts --watch"
  },
  "dependencies": {
    "@types/nodemailer": "^6.4.7",
    "@zerva/core": "workspace:*",
    "@zerva/http": "workspace:*",
    "nodemailer": "^6.9.1",
    "zeed": "^0.10.7"
  },
  "devDependencies": {
    "@types/node": "^18.15.3",
    "tsup": "^6.6.3"
  }
}
