{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    // "lib": [
    //   "ESNext",
    //   "DOM",
    //   "DOM.Iterable",
    //   "WebWorker"
    // ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "preserveSymlinks": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "types": [
      "node",
      "vitest/globals"
    ]
  },
  "exclude": [
    "**/node_modules",
    "**/ssr-vue",
    "**/dist",
    "**/dist_www",
    "**/www"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.vue"
  ]
}