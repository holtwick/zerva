{
  "name": "@zerva/core",
  "version": "0.6.8",
  "description": "🌱 Simple event driven server",
  "license": "MIT",
  "funding": {
    "type": "GitHub Sponsors ❤",
    "url": "https://github.com/sponsors/holtwick"
  },
  "keywords": [
    "server",
    "typescript",
    "event"
  ],
  "author": {
    "name": "Dirk Holtwick",
    "email": "dirk.holtwick@gmail.com",
    "url": "https://holtwick.de"
  },
  "type": "module",
  "typings": "dist/index.d.ts",
  "exports": {
    ".": {
      "browser": "./dist/index.js",
      "require": "./dist/index.cjs",
      "node": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "module": "dist/index.js",
  "main": "dist/index.cjs",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14.13.1"
  },
  "scripts": {
    "start": "npm run watch",
    "build": "npm run clean && npm run build:tsup && chmod +x ./bin.cjs",
    "build:esm": "tsc -p tsconfig.json",
    "build:tsup": "tsup src/index.ts --dts --sourcemap --format esm,cjs",
    "clean": "rm -rf dist",
    "watch": "npm run build:tsup -- --watch",
    "prepublishOnly": "npm test && npm run build",
    "test": "ZEED=* vitest --global -r src",
    "global": "pnpm -g ln"
  },
  "dependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.22",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "helmet": "^5.0.2",
    "qrcode-terminal": "^0.12.0",
    "zeed": "^0.7.136"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/qrcode-terminal": "^0.12.0",
    "cross-fetch": "^3.1.5",
    "tsup": "^5.12.1",
    "typescript": "^4.6.2",
    "vitest": "^0.7.10"
  }
}