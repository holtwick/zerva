{
  "name": "@zerva/core",
  "version": "0.7.29",
  "description": "üå± Simple event driven server",
  "keywords": [
    "server",
    "typescript",
    "event"
  ],
  "funding": {
    "type": "GitHub Sponsors ‚ù§",
    "url": "https://github.com/sponsors/holtwick"
  },
  "license": "MIT",
  "author": {
    "name": "Dirk Holtwick",
    "email": "dirk.holtwick@gmail.com",
    "url": "https://holtwick.de"
  },
  "type": "module",
  "exports": {
    ".": {
      "browser": "./dist/index.js",
      "require": "./dist/index.cjs",
      "node": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run clean && pnpm run build:tsup",
    "build:esm": "tsc -p tsconfig.json",
    "build:tsup": "tsup src/index.ts --dts --sourcemap --format esm,cjs",
    "clean": "rm -rf dist",
    "global": "pnpm -g ln",
    "prepublish": "pnpm test && pnpm run build",
    "start": "pnpm run watch",
    "test": "ZEED=* vitest --globals --run -r src",
    "watch": "pnpm run build:tsup -- --watch"
  },
  "dependencies": {
    "zeed": "^0.7.148"
  },
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.35",
    "tsup": "^5.12.9",
    "typescript": "^4.7.2",
    "vitest": "^0.12.9"
  }
}