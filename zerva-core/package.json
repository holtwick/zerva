{
  "name": "@zerva/core",
  "version": "0.7.17",
  "description": "🌱 Simple event driven server",
  "license": "MIT",
  "funding": {
    "type": "GitHub Sponsors ❤",
    "url": "https://github.com/sponsors/holtwick"
  },
  "keywords": [
    "server",
    "typescript",
    "event"
  ],
  "author": {
    "name": "Dirk Holtwick",
    "email": "dirk.holtwick@gmail.com",
    "url": "https://holtwick.de"
  },
  "type": "module",
  "typings": "dist/index.d.ts",
  "exports": {
    ".": {
      "browser": "./dist/index.js",
      "require": "./dist/index.cjs",
      "node": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "module": "dist/index.js",
  "main": "dist/index.cjs",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14.13.1"
  },
  "scripts": {
    "start": "pnpm run watch",
    "build": "pnpm run clean && pnpm run build:tsup",
    "build:esm": "tsc -p tsconfig.json",
    "build:tsup": "tsup src/index.ts --dts --sourcemap --format esm,cjs",
    "clean": "rm -rf dist",
    "watch": "pnpm run build:tsup -- --watch",
    "prepublish": "pnpm test && pnpm run build",
    "test": "ZEED=* vitest --global --run -r src",
    "global": "pnpm -g ln"
  },
  "dependencies": {
    "@types/node": "^17.0.23",
    "zeed": "^0.7.136"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "tsup": "^5.12.1",
    "typescript": "^4.6.2",
    "vitest": "^0.7.10"
  }
}
