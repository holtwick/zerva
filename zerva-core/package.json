{
  "name": "@zerva/core",
  "version": "0.20.1",
  "description": "üå± Simple event driven server",
  "keywords": [
    "server",
    "typescript",
    "event"
  ],
  "funding": {
    "type": "GitHub Sponsors ‚ù§",
    "url": "https://github.com/sponsors/holtwick"
  },
  "license": "MIT",
  "author": {
    "name": "Dirk Holtwick",
    "email": "dirk.holtwick@gmail.com",
    "url": "https://holtwick.de"
  },
  "type": "module",
  "exports": {
    ".": {
      "browser": "./dist/index.js",
      "default": "./dist/index.js",
      "node": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run clean && pnpm run build:tsup",
    "build:tsup": "tsup src/index.ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm test && pnpm run build",
    "release": "pnpm test && pnpm version patch && pnpm build && pnpm publish --no-git-checks",
    "reset": "rm -rf node_modules pnpm-lock.yaml dist dist_www www",
    "start": "pnpm run watch",
    "test": "ZEED=* vitest --globals --run -r src",
    "watch": "tsup src/index.ts --watch",
    "drun": "ZEED=* LEVEL=a zerva demo/zerva.ts"
  },
  "dependencies": {
    "zeed": "^0.10.7"
  },
  "devDependencies": {
    "@types/jest": "^29.4.1",
    "@types/node": "^18.15.3",
    "@zerva/bin": "workspace:*",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5",
    "vitest": "^0.29.2"
  }
}
