{
  "name": "@zerva/bin",
  "version": "0.7.0",
  "description": "🌱 Zerva Command Line Tool",
  "bin": {
    "zerva": "bin.cjs"
  },
  "funding": {
    "type": "GitHub Sponsors ❤",
    "url": "https://github.com/sponsors/holtwick"
  },
  "keywords": [
    "server",
    "typescript",
    "event"
  ],
  "author": {
    "name": "Dirk Holtwick",
    "url": "https://holtwick.de"
  },
  "license": "MIT",
  "type": "module",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14.13.1"
  },
  "scripts": {
    "start": "npm run watch",
    "build": "npm run clean && chmod +x ./bin.cjs",
    "build:esm": "tsc -p tsconfig.json",
    "build:tsup": "tsup src/index.ts --dts --sourcemap --format esm,cjs",
    "clean": "rm -rf dist",
    "watch": "npm run build:tsup -- --watch",
    "prepublishOnly": "npm test && npm run build",
    "test": "ZEED=* echo todo",
    "global": "pnpm -g ln"
  },
  "dependencies": {
    "@types/node": "^17.0.22",
    "esbuild": "^0.14.27",
    "node-notifier": "^10.0.1",
    "zeed": "^0.7.136"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/qrcode-terminal": "^0.12.0",
    "cross-fetch": "^3.1.5",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.3",
    "tsup": "^5.12.1",
    "typescript": "^4.6.2"
  }
}
