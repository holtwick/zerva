{
  "name": "@zerva/bin",
  "version": "0.11.1",
  "description": "üå± Zerva Command Line Tool",
  "keywords": [
    "server",
    "typescript",
    "event"
  ],
  "funding": {
    "type": "GitHub Sponsors ‚ù§",
    "url": "https://github.com/sponsors/holtwick"
  },
  "license": "MIT",
  "author": {
    "name": "Dirk Holtwick",
    "email": "dirk.holtwick@gmail.com",
    "url": "https://holtwick.de"
  },
  "type": "module",
  "bin": {
    "zerva": "bin.cjs"
  },
  "files": [
    "bin.cjs",
    "icon.png"
  ],
  "scripts": {
    "build": "esbuild src/index.ts --platform=node --target=node10.4 --bundle --external:esbuild --external:node-notifier --minify --format=cjs --outfile=bin.cjs && chmod +x ./bin.cjs",
    "global": "pnpm -g ln",
    "prepublishOnly": "pnpm test && pnpm run build",
    "reset": "rm -rf node_modules pnpm-lock.yaml dist dist_www www",
    "start": "pnpm run watch",
    "test": "echo todo",
    "drun": "pnpm run build && node bin.cjs demo/zerva.js -d --loader=.md:text",
    "dbld": "pnpm run build && node bin.cjs demo/zerva.js --build -d --loader=.md:text && node --enable-source-maps dist/main.cjs"
  },
  "dependencies": {
    "@types/node": "^18.6.1",
    "esbuild": "^0.14.50",
    "esbuild-plugin-yaml": "^0.0.1",
    "node-notifier": "^10.0.1",
    "zeed": "^0.8.1"
  }
}
