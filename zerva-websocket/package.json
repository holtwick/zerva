{
  "name": "@zerva/websocket",
  "version": "0.3.4",
  "description": "🌱 Zerva websocket module",
  "funding": {
    "type": "GitHub Sponsors ❤",
    "url": "https://github.com/sponsors/holtwick"
  },
  "keywords": [
    "server",
    "typescript",
    "event",
    "websocket",
    "socket",
    "zerva",
    "zeed"
  ],
  "author": {
    "name": "Dirk Holtwick",
    "url": "https://holtwick.de"
  },
  "license": "MIT",
  "type": "module",
  "typings": "dist/index.d.ts",
  "exports": {
    ".": {
      "browser": "./dist/index.browser.js",
      "require": "./dist/index.cjs",
      "node": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "module": "dist/index.js",
  "main": "dist/index.cjs",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14.13.1"
  },
  "scripts": {
    "start": "npm run watch",
    "build": "npm run clean && npm run build:tsup",
    "build:esm": "tsc -p tsconfig.json",
    "build:tsup": "tsup src/index.ts src/index.browser.ts --dts --sourcemap --format esm,cjs",
    "watch": "npm run build:tsup -- --watch",
    "check": "tsc --noEmit -p tsconfig.json",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm test && npm run build",
    "test": "jest src --detectOpenHandles"
  },
  "dependencies": {
    "@types/node": "^17.0.0",
    "@types/ws": "^8.2.2",
    "ws": "^8.3.0",
    "zeed": "^0.7.88",
    "@zerva/core": "workspace:^0.5.3"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "jest": "^27.4.5",
    "ts-jest": "^27.1.1",
    "tsup": "^5.11.6",
    "typescript": "^4.5.4"
  }
}
