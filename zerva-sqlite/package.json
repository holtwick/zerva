{
  "name": "@zerva/sqlite",
  "version": "0.14.2",
  "private": false,
  "description": "",
  "author": {
    "name": "Dirk Holtwick",
    "email": "dirk.holtwick@gmail.com",
    "url": "https://holtwick.de"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "browser": "./dist/index.js",
      "default": "./dist/index.js",
      "node": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run clean && pnpm run build:tsup",
    "build:tsup": "tsup src/index.ts  --format esm,cjs --dts --sourcemap --minify --keep-names",
    "check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm test && pnpm run build",
    "release": "pnpm test && pnpm version patch && pnpm build && pnpm publish --no-git-checks",
    "reset": "rm -rf node_modules pnpm-lock.yaml dist dist_www www",
    "start": "pnpm run watch",
    "test": "ZEED=* vitest --globals --run -r src",
    "sample": "ZEED=* tsx src/index.ts",
    "watch": "tsup src/index.ts  --format esm,cjs --dts --sourcemap --minify --keep-names --watch"
  },
  "dependencies": {
    "@types/better-sqlite3": "^7.6.2",
    "better-sqlite3": "^7.6.2",
    "zeed": "^0.8.49"
  },
  "devDependencies": {
    "tsup": "^6.5.0",
    "tsx": "^3.12.1",
    "typescript": "^4.9.3",
    "vite": "^3.2.4"
  }
}