{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2020",
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist/esm",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "strict": true,
    "types": ["node", "jest"],
    "allowJs": true
  },
  "include": ["src/**/*", "index.ts"],
  "exclude": ["node_modules", "dist", "src/**/*.spec.ts"]
}
